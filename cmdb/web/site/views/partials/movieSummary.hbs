<div class="container">
    <div class="d-flex flex-row">
        <div class="col-md-auto">
            <a href={{image}}> <img src={{image}} style="margin-right: 20px " alt={{image}} width="160" height="256"></a>
        </div>
        <div class="d-flex flex-column align-items-start">
            {{#if title}}
                <h1>{{title}}</h1>
            {{/if}}
            {{#if id}}
            <div class="p-2">id:{{id}}</div>
            {{/if}}
            {{#if description}}
            <div class="p-2">Description:{{description}}</div>
            {{/if}}
            {{#if rating}}
            <div class="p-2">Rating:{{rating}}</div>
            {{/if}}
            {{#if duration}}
            <div class="p-2">Duration:{{duration}}</div>
            {{/if}}
        </div>
    </div>
</div>